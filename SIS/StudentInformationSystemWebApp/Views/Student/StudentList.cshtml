<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Suffix</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th>Year Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.studentId</td>
                <td>@student.firstName</td>
                <td>@student.middleName</td>
                <td>@student.lastName</td>
                <td>@student.nameExtension</td>
                <td>@student.gender</td>
                <td>@student.dateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@student.department</td>
                <td>@student.yearLevel</td>
                <td>
                    <a asp-action="UpdateStudent" asp-route-id="@student.studentId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteStudent" asp-route-id="@student.studentId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>